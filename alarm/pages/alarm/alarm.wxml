<!--pages/alarm/alarm-->
<wxs module="format" src="../../utils/format.wxs"></wxs>
<view>
  <modal class = "hostgroupmodal"
    hidden = "{{hiddenhostgroupmodal}}"
    title = "主机组"
    confirm-text = "选择"
    cancel-text = "取消"
    bindcancel = "hostgroupcancel"
    bindconfirm = "hostgroupconfirm" >
    <scroll-view scroll-y="true" style="height: 300rpx;" class="weui-cells weui-cells_after-title">
        <checkbox-group bindchange="hostgroupcheckboxChange">
            <label class="weui-cell weui-check__label" wx:for="{{hostgroups}}" wx:key="groupid">
                <view class="weui-cell__hd">
                    <checkbox value="{{item.name}}" checked="{{item.checked}}"/>
                </view>
                <view class="weui-cell__bd">{{item.name}}</view>
            </label>
        </checkbox-group>
    </scroll-view>
  </modal>
  <view>
    <form catchsubmit="formSubmit" catchreset="formReset">
      <view class="groups">
      <label>主机组：</label>
      <input class="groups_input" value="{{hostgroups_input}}"/>
      <button style="margin: 30rpx 0" type="default" bindtap="get_groups">选择</button>
      </view>
      <view class="hosts">
      <label>主机：</label>
      <input class="hosts_input"/>
      <button style="margin: 30rpx 0" type="default" bindtap="get_hosts">选择</button>
      </view>
      <view class="triggers">
      <label>触发器：</label>
      <input class="triggers_input"/>
      <button style="margin: 30rpx 0" type="default" bindtap="get_triggers">选择</button>
      </view>
      <view class="min_priority">
      <picker bindchange="bindPickerChange" value="{{idx}}" range="{{priority}}" range-key="desc">
      <view class="picker">
        最小的触发器严重级别：{{priority[priority_index].desc}}
      </view>
    </picker>
      </view>
      <view class="btn">
        <button style="margin: 30rpx 0" type="primary" formType="submit">应用</button>
        <button style="margin: 30rpx 0" formType="reset">重设</button>
      </view>
    </form>
  </view>
  <view class="detail">
    <view wx:for="{{alarms}}" wx:key="triggerid">
      <view  wx:for="{{item.hosts}}" wx:key="hostid" wx:for-item="host">
      <view class="divLine"/>
      <view class="line">
        <navigator url="/pages/events/events?triggerid={{item.triggerid}}&&eventid={{item.lastEvent.eventid}}" hover-class="navigator-hover">时间：{{format.getDateTime(item.lastchange)}}</navigator>
      </view>
        <view class="line">
          <text class="{{priorityclass[item.priority]}}">严重性：{{format.getPriority(item.priority)}} </text>
        </view>
        <view class="line">
          <text>状态：{{format.getStatus(item.value)}}</text>
        </view>
        <view class="line">
          <navigator url="/pages/triggers/triggers?triggerid={{item.triggerid}}&&hostid={{host.hostid}}" hover-class="navigator-hover">主机：{{host.host}}</navigator>
        </view>
        <view class="line">
           <navigator url="/pages/triggers/triggers?triggerid={{item.triggerid}}&&hostid={{host.hostid}}" hover-class="navigator-hover">问题：{{item.description}}</navigator>
        </view>
        <view class="line">
          <text>确认状态：{{format.getacknowledged(item.lastEvent.acknowledged)}}</text>
        </view>
               
      </view>

    </view>
  </view>
</view>
